<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="TourPlanner" Height="450" Width="800" MinWidth="100">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Name="file" Margin="5" Grid.Column="0" MinWidth="50">File</Button>
                <Button Name="edit" Margin="5" Grid.Column="1" MinWidth="50">Edit</Button>
                <Button Name="options" Margin="5" Grid.Column="2" MinWidth="60">Options</Button>
                <Button Name="help" Margin="5" Grid.Column="3" MinWidth="50">Help</Button>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Tour:" VerticalAlignment="Center" Margin="5,0,5,0"></TextBlock>
                <TextBox Grid.Column="1" Name="tourSearch" VerticalAlignment="Center" Margin="5,0,5,0" Text="{Binding SearchTour}"></TextBox>
                <Button Name="search" Margin="5" Grid.Column="2" MinWidth="50">Search</Button>
            </Grid>

            <Grid Height="370">
                <!-- TO DO: No fixed heighth -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="Black" BorderThickness="1" Margin="5,0,5,0">
                    <Grid Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Tours" VerticalAlignment="Center" Margin="5"></TextBlock>
                                <Button Name="addTour" Margin="5" Grid.Column="1" MinWidth="15">+</Button>
                                <Button Name="deleteTour" Margin="5" Grid.Column="2" MinWidth="15">-</Button>
                                <Button Name="addMultipleTours" Margin="5" Grid.Column="3" MinWidth="15">[ ]</Button>
                            </Grid>

                            <!--<TextBlock Grid.Row="1" Text="-Tour1" Margin="5"></TextBlock>-->
                            <ListView Grid.Row="1" ItemsSource="{Binding Tours}" Name="listTours">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,5,0">
                        <Grid Grid.Row="0" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Title:" VerticalAlignment="Center" Margin="5,0,5,5"></TextBlock>

                            <Grid Grid.Row="1">
                                <TabControl>
                                    <TabItem>
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock>Route</TextBlock>
                                            </StackPanel>
                                        </TabItem.Header>
                                        <StackPanel>
                                            <TextBlock Height="100"/>
                                            <!-- TO DO: No fixed heighth -->
                                        </StackPanel>
                                    </TabItem>
                                    <TabItem Header="Description">
                                        <!--Bind TextBlock.Text to the TextBox on the first TabItem.-->
                                        <!--<TextBlock Height="100" Text="{Binding ElementName=textBox1, Path=Text}"/>-->
                                        <TextBlock Height="100"/>
                                        <!-- TO DO: No fixed heighth -->
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </Border>

                    
                    <Grid Grid.Row="1">
                        <Border BorderBrush="Black" BorderThickness="1" Margin="0,5,5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Logs:" VerticalAlignment="Center" Margin="5"></TextBlock>
                                    <Button Grid.Column="1" Name="addLog" Margin="5"  MinWidth="15">+</Button>
                                    <Button Grid.Column="2" Name="deleteLog" Margin="5" MinWidth="15">-</Button>
                                    <Button Grid.Column="3" Name="addMultipleLogs" Margin="5" MinWidth="15">[ ]</Button>
                                </Grid>

                                <DataGrid Height="160" Grid.Row="1" Margin="5">
                                    <!-- TO DO: No fixed heighth -->
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date"/>
                                        <DataGridTextColumn Header="Duration"/>
                                        <DataGridTextColumn Header="Distance"/>
                                        <DataGridTextColumn Header="Rating"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </Grid>
                        </Border>
                        
                    </Grid>


                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
